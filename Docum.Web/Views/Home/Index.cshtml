<script src="../../Scripts/jquery.tmpl.js" type="text/javascript"></script>
<script type="text/javascript">
    function addDoc() {
        $(".dialog").dialog({
            modal: true,
            resizable: false,
            width: 300,
            height: 100,
            title: "New Document"
        });
    }
</script>
<style type="text/css">
    .documentList
    {
        list-style: none;
        margin: 0;
        padding: 5px 0;
    }
    .documentList li
    {
        border: 1px solid gray;
        padding: 15px;
        border-radius: 5px;
        background: bisque;
    }
    .docWrapper
    {
        float:left;
        width: 300px;
        position: relative;
    }
    .plus
    {
        float: right;
    }
    .content
    {
        float:right;
        width:600px;
        height:300px;
        margin-top:50px;
    }
 .ui-widget-header
 {
     
 }
 
</style>
<div class="dialog" style="display: none">
    <input type="text" id="txtDocTitle" />
    <input type="button" value="Ekle" />
</div>
<div id="docs">
    <div class="docWrapper">
    <input type="text" id="txtToSearch" />
        <h4>
            Sort By
        </h4>
        <span class="sort">[Name]</span><span class="sort"> [Last Mod Name]</span> <span
            class="plus" onclick="addDoc()">Artı</span>
        <div id="docList">
        </div>
        
    </div>
    <div class="content"></div>
</div>
<script id="searchTemplate" type="text/x-jQuery-tmpl">
    <ul class="documentList">
        <li data-value="${Id}">${Name} ${LastSavedBy}</li>
    </ul>
</script>
<script type="text/javascript" language="javascript">
    $(document).ready(function () {

        $.ajax({
            url: "Home/GetMyDocuments",
            cache: "false",
            dataType: "json",
            type: "POST",
            success: function (data) {
                $("#searchTemplate").tmpl(data).appendTo("#docList");
            }

        });

        $(".documentList > li ").live("click", function () {

            $.ajax({
                url: "Home/DocumentDetails",
                data: "documentId=" + $(this).attr("data-value"),
                type: "get",
                success: function (data) {
                    $(".content").html(data);
                }

            });
        });
    });

</script>
